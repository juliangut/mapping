{
  "name": "juliangut/mapping",
  "description": "Base for mapping support with Doctrine annotations",
  "keywords": [
    "doctrine",
    "annotations",
    "mapping",
    "php",
    "json",
    "yaml",
    "xml"
  ],
  "homepage": "https://github.com/juliangut/mapping",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/mapping",
    "issues": "https://github.com/juliangut/mapping/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.3|^8.0",
    "psr/simple-cache": "^1.0",
    "symfony/polyfill-php80": "^1.0"
  },
  "require-dev": {
    "ext-json": "*",
    "ext-libxml": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "doctrine/annotations": "^1.10.3",
    "friendsofphp/php-cs-fixer": "^2.17",
    "infection/infection": "^0.18|^0.21",
    "overtrue/phplint": "^2.3",
    "phpmd/phpmd": "^2.9",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/extension-installer": "^1.1.0",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-deprecation-rules": "^0.12",
    "phpstan/phpstan-strict-rules": "^0.12",
    "phpunit/phpunit": "^9.5",
    "povils/phpmnd": "^2.4",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^6.0.3",
    "squizlabs/php_codesniffer": "^3.5",
    "thecodingmachine/phpstan-strict-rules": "^0.12",
    "symfony/yaml": "^5.0.10"
  },
  "suggest": {
    "doctrine/annotations": "(^1.4) In order to load mappings from class annotations",
    "symfony/yaml": "(^3.1) In order to load mappings from YAML files"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Mapping\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Mapping\\Tests\\": "tests/Mapping/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
