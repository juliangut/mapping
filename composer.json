{
  "name": "juliangut/mapping",
  "description": "Base for mapping support",
  "keywords": [
    "doctrine",
    "annotations",
    "attributes",
    "mapping",
    "php",
    "json",
    "yaml",
    "xml"
  ],
  "homepage": "https://github.com/juliangut/mapping",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/mapping",
    "issues": "https://github.com/juliangut/mapping/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0",
    "psr/simple-cache": "^2.0|^3.0"
  },
  "require-dev": {
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "doctrine/annotations": "^2.0",
    "infection/infection": "~0.25|~0.27",
    "juliangut/easy-coding-standard-config": "^1.12",
    "juliangut/phpstan-config": "^1.1",
    "overtrue/phplint": "^4.0|^5.0|^6.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.13",
    "phpunit/phpunit": "^9.6|^10.3",
    "povils/phpmnd": "^3.2",
    "roave/security-advisories": "dev-master",
    "symfony/yaml": "^6.0"
  },
  "suggest": {
    "doctrine/annotations": "(^1.4) In order to load mappings from class annotations",
    "symfony/yaml": "(^3.1) In order to load mappings from YAML files"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Mapping\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Mapping\\Tests\\": "tests/Mapping/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
